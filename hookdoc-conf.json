{
  "opts": {
    "destination": "hookdocs",
    "recurse": true,
    "readme": "./README.md"
  },
  "source": {
    "include": [
      "./",
      "display",
      "functionality",
      "performance"
    ],
    "includePattern": ".+\\.(php)?$"
  },
  "plugins": [
    "node_modules/wp-hookdoc/plugin",
    "plugins/markdown"
  ]
}
